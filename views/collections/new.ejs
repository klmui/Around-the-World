<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 35px auto;">
            <h1 class="text-center">Create a New Collection</h1>
            <form action="/collections" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Location" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0" step="1" required>
                </div>
                <div class="form-group">
                    <label for="categorySelect">Type of Collection</label>
                    <select class="form-control" id="categorySelect" name="category">
                      <option>Travel Blog</option>
                      <option>Travel Guide</option>
                    </select>
                  </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" placeholder="Description" rows="5" required></textarea>
                </div>
                <div class="form-group">
                <!--btn-block makes it take up the entire width-->
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/collections">Go Back</a>
        </div> 
    </div>
</div>

<%- include('../partials/footer'); %>