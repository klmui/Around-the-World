<%- include('../partials/header'); %>

<div class="container mt-5">
  <div class="row">
    <% for (var i = 0; i < collections.length; i++) { %>
      <div class="col-lg-4">
        <div class="card mx-3" style="height: 50vh">
            <img src="<%= collections[i].image %>" class="card-img" alt="..." style="height: 18vh">
            <div class="card-body">
              <h5 class="card-title"><%= collections[i].name %></h5>
              <p class="card-text"><%= collections[i].description.substring(0, 20) %>...</p>
              <button type="button" class="btn btn-sm btn-outline-success">View Collection</button>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
      </div>
    <% } %>
  </div>
    
</div>

<%- include('../partials/footer'); %>